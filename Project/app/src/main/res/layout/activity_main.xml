<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classTypeName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="ADMIN CONTROL CENTER"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <LinearLayout
        android:id="@+id/enterClassDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminTitle"
        app:layout_constraintVertical_bias="0.074">

        <TextView
            android:id="@+id/classTypeText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:fontFamily="@font/capriola"
            android:text="Enter Class Name:"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#070707"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/enterClassTypeText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter Class Type Here"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/classDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/capriola"
            android:text="Enter Class Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#0C0B0B"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="Enter Class Description Here"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/viewClassesText"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="223dp"
        android:layout_height="63dp"
        android:backgroundTint="#B84C26"
        android:fontFamily="@font/capriola"
        android:text="View Classes"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterClassDescriptionText"
        app:layout_constraintVertical_bias="0.391" />

    <LinearLayout
        android:id="@+id/classEditButtons"
        android:layout_width="370dp"
        android:layout_height="78dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565">

        <Button
            android:id="@+id/addClassText"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="172dp"
            android:layout_height="59dp"
            android:backgroundTint="#B84C26"
            android:fontFamily="@font/capriola"
            android:text="Add New Class"
            android:textSize="14sp" />

        <Button
            android:id="@+id/deleteClassText"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:backgroundTint="#B84C26"
            android:fontFamily="@font/capriola"
            android:text="Delete New Class"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>